<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Carousel Component Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_3_docs_component_en#Image">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <cImageOne
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Select image"
                        fieldLabel="Carousel Image 1:"
                        name="./cImageOne"/>
                    <cTitleOne
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Title 1"
                        name="./cOneTitle"/>
                    <cPriceOne
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Price"
                        fieldLabel="Price 1:"
                        name="./priceOne"/>
                    <cImageTwo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Select image"
                        fieldLabel="Carousel Image 2:"
                        name="./cImageTwo"/>
                    <cTitleTwo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Title 2"
                        name="./cTwoTitle"/>
                    <cPriceTwo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Price"
                        fieldLabel="Price 2:"
                        name="./priceTwo"/>
                    <cImageThree
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Select image"
                        fieldLabel="Carousel Image 3:"
                        name="./cImageThree"/>
                    <cTitleThree
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Title 3"
                        name="./cThreeTitle"/>
                    <cPriceThree
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Price"
                        fieldLabel="Price 3:"
                        name="./priceThree"/>
                    <cImageFour
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Select image"
                        fieldLabel="Carousel Image 4:"
                        name="./cImageFour"/>
                    <cTitleFour
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Title 4"
                        name="./cFourTitle"/>
                    <cPriceFour
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Price"
                        fieldLabel="Price 4:"
                        name="./priceFour"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
