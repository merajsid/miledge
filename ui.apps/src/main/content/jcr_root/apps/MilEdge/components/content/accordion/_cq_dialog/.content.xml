<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Accordion Component Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_3_docs_component_en#Image">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabOne
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="heading of the Accordion tab"
                        fieldLabel="heading "
                        name="./tabOneTitle"/>
                    <tabOneDes
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textarea"
                        fieldLabel="Description"
                        name="./tabOneDesc"
                        rootPath="/content"/>
                    <tabTwo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="heading of the Accordion tab"
                        fieldLabel="heading "
                        name="./tabTwoTitle"/>
                    <tabTwoDes
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textarea"
                        fieldLabel="Description"
                        name="./tabTwoDesc"
                        rootPath="/content"/>
                    <tabThree
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="heading of the Accordion tab"
                        fieldLabel="heading "
                        name="./tabThreeTitle"
                        rootPath="/content/dam/"/>
                    <tabThreeDes
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textarea"
                        fieldLabel="Description"
                        name="./tabThreeDesc"
                        rootPath="/content"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
